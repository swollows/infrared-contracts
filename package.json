{
  "name": "infrared-mono-repo",
  "version": "1.0.0",
  "description": "Infrared is the all in one liquidity platform on Berachain",
  "main": "TODO.go",
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier --write **.sol",
    "prettier:list": "prettier --list-different **.sol",
    "prettier:check": "prettier --check **.sol",
    "solhint": "solhint --config ./.solhint.json 'contracts/src/**/*.sol' --fix",
    "solhint:check": "solhint --config ./.solhint.json 'contracts/src/**/*.sol'",
    "lint": "npm run solhint",
    "lint:check": "npm run prettier:check && npm run solhint:check"
  },
  "lint-staged": {
    "*.{js,css,md,ts,sol}": "forge fmt",
    "*.sol": "solhint --fix 'solidity/**/*.sol",
    "package.json": "sort-package-json"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-red:infrared-dao/infrared-mono-repo.git"
  },
  "keywords": [
    "Defi",
    "Infrustructor"
  ],
  "author": "Infrared Team",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "husky": ">=8",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6"
  }
}
