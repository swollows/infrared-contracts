{
  "name": "infrared-mono-repo",
  "version": "1.0.0",
  "description": "Infrared is the all in one liquidity platform on Berachain",
  "author": "Infrared Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com-red:infrared-dao/infrared-mono-repo.git"
  },
  "scripts": {
    "prepare": "husky install",
    "format:services": "gofmt -w ./services",
    "format:contracts": "forge fmt --root ./contracts",
    "test:contracts": "forge test -vvv --root ./contracts",
    "solhint": "solhint --config ./.solhint.json 'contracts/src/**/*.sol' --fix",
    "solhint:check": "solhint --config ./.solhint.json 'contracts/src/**/*.sol'",
    "lint": "npm run solhint",
    "lint:check": "npm run solhint:check"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "husky": ">=8",
    "solhint": "^3.3.6"
  }
}
